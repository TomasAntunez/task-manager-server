{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": { "@/*": ["./src/*"] }
  }
}
